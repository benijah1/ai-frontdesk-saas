// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Use a literal provider (Prisma does NOT allow env() here)
  provider = "postgresql"
  url      = env("DATABASE_URL")        // e.g. Vercel Postgres / Neon
  // Optional: uncomment if you use migrations during CI with a separate shadow DB
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())

  // NextAuth base fields
  email         String?   @unique
  emailVerified DateTime?
  name          String?
  image         String?

  // Credentials auth (optional for OAuth-only users)
  password      String?

  // Authorization / Access
  role          String    @default("USER") // "USER" | "ADMIN" | "SUPERADMIN"
  isAdmin       Boolean   @default(false)
  bypassPaywall Boolean   @default(false)

  createdAt     DateTime  @default(now())

  // Multi-tenant
  tenantId      String?
  tenant        Tenant?   @relation(fields: [tenantId], references: [id], onDelete: SetNull)

  // NextAuth relations
  sessions      Session[]
  accounts      Account[]
}

model Tenant {
  id            String   @id @default(cuid())
  name          String
  subdomain     String?  @unique
  primaryColor  String?  @default("#0ea5e9")
  createdAt     DateTime @default(now())

  // Backrefs
  users         User[]
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([sessionToken])
}

model Account {
  id                         String  @id @default(cuid())
  userId                     String
  type                       String
  provider                   String
  providerAccountId          String
  refresh_token              String? @db.Text
  access_token               String? @db.Text
  expires_at                 Int?
  token_type                 String?
  scope                      String?
  id_token                   String? @db.Text
  session_state              String?
  oauth_token_secret         String? @db.Text
  oauth_token                String? @db.Text

  user                       User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
