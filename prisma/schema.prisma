datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  createdAt     DateTime    @default(now())
  
  assistants    Assistant[] // A user can have multiple service page agents
}

model Assistant {
  id            String   @id @default(cuid())
  userId        String
  name          String   // e.g. "Pricing Page Agent"
  
  // This is the "Brain" context. 
  // Example: "We are a dental clinic. Open 9-5. Cleaning is $100."
  context       String   @db.Text 
  
  model         String   @default("gpt-4-turbo")
  createdAt     DateTime @default(now())
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  chats         ChatSession[]
}

model ChatSession {
  id            String   @id @default(cuid())
  assistantId   String
  transcript    Json     // Stores the conversation
  createdAt     DateTime @default(now())
  
  assistant     Assistant @relation(fields: [assistantId], references: [id], onDelete: Cascade)
}
